{
  "compilerOptions": {
    "allowArbitraryExtensions": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "lib": ["es2023"],
    "module": "es2022",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rewriteRelativeImportExtensions": true,
    "moduleResolution": "bundler",
    "target": "es2021",
    "exactOptionalPropertyTypes": true,
    "strict": true
  },
  "include": ["src"]
}
